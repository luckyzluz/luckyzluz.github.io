#footer-wrap
  if theme.footer.owner.enable
    - var now = new Date()
    - var nowYear = now.getFullYear()
    if theme.footer.owner.since && theme.footer.owner.since != nowYear
      .copyright!= `&copy;${theme.footer.owner.since} - ${nowYear} <i style="color:#FF6A6A;animation: announ_animation 0.8s linear infinite;" class="fa fa-heartbeat"></i> By ${config.author}`
    else
      .copyright!= `&copy;${nowYear} By ${config.author}`
  if theme.footer.copyright
    .framework-info
      //- span= _p('footer.framework') + ' '
      - span= _p('作者') + ' '
      a(href='https://blog.wuwang.co')= 'zluz'
      span.footer-separator |
      //- span= _p('footer.theme') + ' '
      - span= _p('加群') + ' '
      a(href='https://qm.qq.com/cgi-bin/qm/qr?k=3bYMQyO45RnbZmYGD2i7tJTa3V3SKPx5')= 'QQ群'
  if theme.footer.custom_text
    .footer_custom_text!=`${theme.footer.custom_text}`
